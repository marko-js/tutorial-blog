import { formatDate } from "../../../utils";

<for|{ author, text, date }, index| of=input.comments || []>
  <li.comment>
    <hr>
    <h3>${author}</h3>
    <h3>${formatDate(date)}</h3>
    <p>${text}</p>
  </li>
</for>

style {
  .comment {
    flex-direction: column;
    align-items: left;
    text-decoration: none;
  }
}
